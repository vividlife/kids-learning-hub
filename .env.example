# Database (Production: Use PostgreSQL like Neon, Supabase, or Vercel Postgres)
DATABASE_URL=&quot;postgresql://username:password@host:port/database&quot;

# NextAuth (Required for production)
NEXTAUTH_URL=&quot;https://your-app.vercel.app&quot;
NEXTAUTH_SECRET=&quot;generate-with-openssl-rand-hex-32&quot;

# OpenAI API (optional for AI features)
OPENAI_API_KEY=&quot;sk-your-openai-key&quot;

# File Upload Limits
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=&quot;image/*,audio/*,video/*,.pdf&quot;

# App Configuration
APP_NAME=&quot;Kids Learning Hub&quot;
APP_URL=&quot;https://your-app.vercel.app&quot;

# Environment
NODE_ENV=&quot;production&quot;

# TTS Service (optional)
TTS_API_KEY=&quot;your-tts-api-key&quot;
TTS_VOICE=&quot;en-US-JennyNeural&quot;

# Prisma (for production database migrations)
PRISMA_GENERATE_SKIP_AUTOINSTALL=&quot;true&quot;