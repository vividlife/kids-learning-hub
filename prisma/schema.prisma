generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  avatar        String?
  role          String   @default("CHILD") // PARENT, CHILD, ADMIN
  age           Int?
  grade         String?  // PRESCHOOL, GRADE_1, GRADE_2, etc.
  learningLevel String?  // BEGINNER, INTERMEDIATE, ADVANCED
  parentId      String?  // If child, link to parent
  password      String   @default("")
  preferences   String?  // JSON string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  parent           User?             @relation("ParentChildren", fields: [parentId], references: [id])
  children         User[]            @relation("ParentChildren")
  learningPlans    LearningPlan[]
  progress         Progress[]
  achievements     Achievement[]
  points           Int               @default(0)
  totalPoints      Int               @default(0)
  sessions         StudySession[]
  studyRecords     StudyRecord[]
  words            Word[]
  quizAttempts     QuizAttempt[]
  gameScores       GameScore[]
  notifications    Notification[]
  learningContents LearningContent[]
  accounts         Account[]
  authSessions     Session[]

  @@index([parentId])
  @@index([role])
  @@index([grade])
  @@index([learningLevel])
}

model Word {
  id            String   @id @default(cuid())
  word          String   @unique
  translation   String
  pronunciation String?
  example       String?
  imageUrl      String?
  audioUrl      String?
  category      String
  difficulty    String   @default("EASY") // EASY, MEDIUM, HARD
  targetGrade   String?
  targetLevel   String?
  tags          String?  // JSON string
  status        String   @default("NEW") // NEW, LEARNING, REVIEW, MASTERED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  userId       String?
  user         User?         @relation(fields: [userId], references: [id])
  studyRecords StudyRecord[]

  @@index([userId])
  @@index([category])
  @@index([difficulty])
  @@index([targetGrade])
  @@index([targetLevel])
  @@index([status])
  @@index([word])
}

model StudyRecord {
  id           String   @id @default(cuid())
  wordId       String
  userId       String
  correct      Boolean
  responseTime Int      // milliseconds
  exerciseType String   // flashcard, multiple_choice, spelling
  createdAt    DateTime @default(now())

  // Relations
  word Word @relation(fields: [wordId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@index([wordId])
  @@index([userId])
  @@index([createdAt])
}

model LearningPlan {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  type        String    // daily, weekly, custom
  startDate   DateTime
  endDate     DateTime?
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user  User           @relation(fields: [userId], references: [id])
  tasks LearningTask[]

  @@index([userId])
  @@index([completed])
}

model LearningTask {
  id          String   @id @default(cuid())
  planId      String
  title       String
  description String?
  type        String   // word_study, quiz, reading
  targetCount Int?
  completed   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  plan LearningPlan @relation(fields: [planId], references: [id])

  @@index([planId])
  @@index([completed])
}

model Progress {
  id     String   @id @default(cuid())
  userId String
  metric String   // words_learned, quiz_score, time_spent
  value  Float
  date   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([date])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  icon        String
  unlockedAt  DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model StudySession {
  id           String    @id @default(cuid())
  userId       String
  startTime    DateTime  @default(now())
  endTime      DateTime?
  duration     Int?      // seconds
  activityType String    // word_study, quiz, game
  score        Float?
  createdAt    DateTime  @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([startTime])
}

model Question {
  id            String   @id @default(cuid())
  title         String
  content       String
  type          String   // MULTIPLE_CHOICE, FILL_IN_BLANK, etc.
  difficulty    String   @default("EASY")
  subject       String   // english, math, science
  targetGrade   String?
  targetLevel   String?
  options       String?  // JSON string
  correctAnswer String
  explanation   String?
  imageUrl      String?
  audioUrl      String?
  videoUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  quizzes QuizQuestion[]

  @@index([subject])
  @@index([difficulty])
  @@index([type])
  @@index([targetGrade])
  @@index([targetLevel])
}

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?
  subject     String
  difficulty  String   @default("EASY")
  targetGrade String?
  targetLevel String?
  timeLimit   Int?     // seconds
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  questions QuizQuestion[]
  attempts  QuizAttempt[]

  @@index([targetGrade])
  @@index([targetLevel])
}

model QuizQuestion {
  id         String @id @default(cuid())
  quizId     String
  questionId String
  order      Int    @default(0)

  // Relations
  quiz     Quiz     @relation(fields: [quizId], references: [id])
  question Question @relation(fields: [questionId], references: [id])

  @@unique([quizId, questionId])
  @@index([quizId])
  @@index([questionId])
}

model QuizAttempt {
  id             String   @id @default(cuid())
  quizId         String
  userId         String
  score          Float
  totalQuestions Int
  correctAnswers Int
  timeSpent      Int?     // seconds
  completedAt    DateTime @default(now())

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@index([quizId])
  @@index([userId])
  @@index([completedAt])
}

model LearningContent {
  id           String   @id @default(cuid())
  title        String
  description  String?
  type         String   // PDF, IMAGE, AUDIO, VIDEO, DOCUMENT
  subject      String
  targetGrade  String?
  targetLevel  String?
  fileUrl      String
  thumbnailUrl String?
  duration     Int?     // seconds for audio/video
  size         Int?     // bytes
  uploadedBy   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  uploader User @relation(fields: [uploadedBy], references: [id])

  @@index([subject])
  @@index([targetGrade])
  @@index([targetLevel])
  @@index([uploadedBy])
}

model GameScore {
  id        String   @id @default(cuid())
  userId    String
  gameType  String   // matching_game, spelling_bee, memory_game
  score     Int
  level     Int
  timeSpent Int      // seconds
  playedAt  DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([gameType])
  @@index([playedAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   // achievement, reminder, progress, sister
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

// NextAuth models for authentication
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}